---
import Layout from "@layouts/PageLayout.astro";
import ThemeButton from "@components/ThemeButton.astro";
import Preview from "@components/Preview.astro";

const title = "Digital Garden";
const description = "the plot";
---

<Layout {title} {description}>
	<div class="flex items-center mt-1 gap-1">
		<ThemeButton iconSize="40px"/>
		<nav><a href="/">Homepage</a></nav>
	</div>
	<div class="flex flex-col justify-center -mt-2">
		<h1 class="mx-auto">Digital Garden</h1>
		<div class="flex flex-col justify-evenly gap-2 sm:flex-row">
			<section>
				<h2>Pinned</h2>
				<div class="flex flex-col gap-2 sm:max-w-[16rem]">
					<Preview entry="aboutme" dated={false} description=" "/>
					<Preview entry="futureprojects" dated={false} />
					<Preview entry="toolsiuse" dated={false} />
				</div>
			</section>
			<section>
				<h2>Recent</h2>
				<div class="flex flex-col gap-2 sm:max-w-[16rem]">
					<Preview
						href="/garden/nodemailer/"
						entry="nodemailer"
						title="Serverless Nodemailer"
						description="Serverless function to send emails via SMTP on static sites, zero js needed"
					/>
					<Preview
						href="https://github.com/OliverSpeir/remark-imgattr"
						target="_blank"
						title="remark-imgAttr"
						description="My first NPM package"
						date="Jan, 2024"
						external={true}
					/>
					<Preview entry="a11y" />
					<Preview entry="theorycrafting" />
				</div>
			</section>
			<section>
				<h2>Older</h2>
				<div class="flex flex-col gap-2 sm:max-w-[16rem]">
					<Preview
						entry="fastapi-with-supabase"
						description="A trick I found for using the supabase-py library with FastAPI"
					/>
					<Preview
						entry="nextauth-with-drf"
						description="A pretty detailed guide to using NextAuth with Django REST Framework"
					/>
					<Preview
						href="/garden/projects/"
						title="School projects"
						date="Feb, 2023"
						description="A remnant from version 1 of this website, detailing my school prorjects"
					/>
				</div>
			</section>
		</div>
	</div>
</Layout>
