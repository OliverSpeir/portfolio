---
import Layout from "@layouts/PageLayout.astro";
import PicAndLinks from "@components/pages/index/picandlinks/PicAndLinks.astro";
import Flora from "@components/pages/index/flora/Flora.astro";
import TimeScript from "@components/pages/index/TimeScript.astro";
import VTColorThemeToggle from "@components/layout/VTColorThemeToggle.astro";

const title = "Oliver Speir";
const description = "Personal website";
---

<Layout {title} {description}>
  <VTColorThemeToggle />
  <div class="flex justify-center">
    <div class="flex gap-x-12 md:gap-x-[6rem] flex-col sm:flex-row">
      <nav>
        <PicAndLinks />
      </nav>

      <section class="max-w-[20rem]">
        <h1 id="main-content">Hey, I'm Oliver</h1>
        <p class="mb-0">I value open source and decentralization.</p>
        <p class="mt-0">I want the internet to be accessible.</p>
        <p class="my-0">I'm in Mountain Time Zone,</p>
        <p class="mt-0">it is currently <span id="time">00:00</span> for me.</p>
        <TimeScript />
        <Flora />
      </section>
    </div>
  </div>
</Layout>
