---
import Layout from '../layouts/Layout.astro';
import LinkCard from '../components/LinkCard.astro';
import SocialLogos from '../components/SocialLogos.astro';
---

<Layout title="Oliver Speir">
	<SocialLogos class="top"/>
	<main>
		<div class="text-container">
		<h1>Oliver Speir</h1>
		<h2>Software Engineer</h2>
			<p class="body-text">
				I am a driven engineer who loves to solve problems.
				<br> I am looking for a position that will allow me to develop my skills and create powerful technology.
			</p>
		</div>
		<div class="cards">
			<ul role="list" class="card-grid">
			<LinkCard
				href="/projects"
				title="Projects"
				target="_self"
				body="Click here to see my projects."
			/>
			<LinkCard
				href="https://storage.googleapis.com/oliver-speir-cv-resume/OliverSpeirCV.pdf"
				title="CV"
				target="_blank"
				body="Click here to see my CV."
			/>
			<LinkCard
			href="/skills"
			title="Skills"
			target="_self"
			body="Click here to see my skills."
			/>
			<LinkCard
			href="/about"
			title="About Me"
			target="_self"
			body="Click here to learn more about me."
			/>
			</ul>
		</div>
	</main>
	<SocialLogos class="bottom"/>
</Layout>

<style>
	h1 {
		text-align: center;
		font-size: 3rem;
		font-weight: 800;
		margin: 0;
	}
	h2 {
		text-align: center;
		font-size: 2rem;
		font-weight: 700;
		color: var(--accent-color);
		margin: 0;
	}
	.text-container {
		max-width: 60ch;
		margin-right: 5vw;
	}
	.body-text {
		margin-top:3vh;
		margin-left:auto;
		margin-right:auto;
		line-height: 1.6;
		border: 1px solid var(--hover-accent) 25%;
		background-color: var(--card-color);
		padding: 1rem;
		border-radius: 0.4rem;
	}
	.cards {
		max-width: 60ch;
	}
	@media (max-width:999px){
		main {
			display:flex;
			flex-direction: column;
			justify-content: center;
			margin-right: 2vw;
			margin-left: 2vw;
		}
		.card-grid {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(15ch, 1fr));
				gap: 1rem;
				padding: 0;
			}
	}
	@media (min-width:1000px){
		main {
			display:flex;
			padding-top: 15vh;
			justify-content: center;
		}
		.card-grid {
			margin-top: 2vh;
			display: grid;
			grid-template-columns: repeat(auto-fit, minmax(15ch, 1fr));
			gap: 1rem;
			padding: 0;
		}
    }
</style>
