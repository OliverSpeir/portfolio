---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
---

<Layout title="Oliver Speir">
	<header>
		<p>insert contact links</p>
	</header>
	<main>
		<div class="text-container">
		<h1>Oliver Speir</h1>
			<p class="body-text">
				I am a driven engineer who loves to solve problems.
				<br> I am looking for a position that will allow me to develop my skills and create powerful technology.
			</p>
		</div>
		<div class="card-container">
			<ul role="list" class="link-card-grid">
			<Card
				href="/projects"
				title="Projects"
				target="_self"
				body="Click here to see the projects I have worked on."
			/>
			<Card
				href="https://storage.googleapis.com/oliver-speir-cv-resume/Oliver%20Speir%20CV.pdf"
				title="CV / Resume"
				target="_blank"
				body="Click here to open my CV/Resume in a new tab."
			/>
			<Card
			href="/skills"
			title="Skills"
			target="_self"
			body="Click here to see my skills."
			/>
			<Card
			href="/about"
			title="About Me"
			target="_self"
			body="Click here to learn more about me."
			/>
			</ul>
		</div>
	</main>
</Layout>

<style>
	main {
		display: flex;
  		flex-wrap: wrap;
  		justify-content: space-between;
		margin: auto;
		padding: 1.5rem;
		max-width: 60ch;
	}
	/* h1 {
