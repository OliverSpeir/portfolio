---
import { getImage } from 'astro:assets';
import { Picture } from 'astro:assets';
export interface Props {
  title: string;
  picture: ImageMetadata;
  src: string;
  body: string;
}

const { title, body, src, picture } = Astro.props;

---

<div class="blog-card">
  <a href={src}>
    <h2>
      {title}
    </h2>
    <Picture src={picture} alt={title} loading={"eager"} formats={["avif","webp"]}/>
    <p class="description">{body}</p>
  </a>
</div>
<style>
  img {
    width: 20rem;
    height: auto;
  }
  .blog-card {
    display: flex;
    padding: 0.25rem;
    margin-bottom: 2rem;
    background-color: var(--accent-color);
    background-image: none;
    background-size: 400%;
    border-radius: 0.6rem;
    background-position: 100%;
    transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    box-shadow: 0 4px 6px -1px var(--card-shadow),
      0 2px 4px -2px var(--card-shadow);
  }
  .blog-card > a {
    width: 100%;
    text-decoration: none;
    line-height: 1.4;
    padding: 0.5vw;
    border-radius: 0.6rem;
    color: var(--text-color);
    background-color: var(--card-color);
    opacity: .95;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  /* critters:exclude */
  .blog-card:is(:hover) {
    background-position: 0;
    background-image: var(--hover-accent-gradient);
    box-shadow: none;
  }
  /* critters:exclude */
  .blog-card:is(:hover) h2 {
    color: var(--hover-accent);
  }
  h2 {
    text-align: center;
    margin-top: 0;
    font-size: 1.25rem;
  }
  .description {
    padding-left: 1rem;
    padding-right: 1rem;
    max-width: 50ch;
    z-index: 50;
  }
  .buffer {
    margin-bottom: 2rem;
  }
</style>
