<style>
  .tooltip::after {
    content: attr(data-tooltip);
    background: var(--card-color);
    color: var(--text-color);
    padding: 0px 10px 5px 10px;
    position: absolute;
    z-index: 1;
    top: 100%;
    left: 50%;
    transform: translateX(-50%);
    white-space: nowrap;
    opacity: 0;
    transition: opacity 0.5s ease-in-out;
    pointer-events: none;
    border-radius: 20px;
  }
  .tooltip {
    position: relative;
    display: inline-block;
  }
  .tooltip:hover::after {
    opacity: 1;
  }
  .projects {
    display: flex;
    justify-content: center;
    gap: 1rem;
  }
  .projects svg {
    width: auto;
    height: 3rem;
  }
  .home-bottom {
    display: flex;
    justify-content: center;
    gap: 1rem;
    margin-top: 1rem;
  }
  .home-bottom svg {
    width: auto;
    height: 3rem;
  }
  .home-middle {
    display: flex;
    justify-content: center;
    gap: 1rem;
  }
  .home-middle svg {
    width: auto;
    height: 3rem;
  }
  .home-middle .cv {
    display:none;
  }
  .home-bottom .cv {
    display:none;
  }

  @media (max-width: 874px) {
    .home-middle {
      display: none;
    }
    .home-middle {
      overflow: hidden;
    }
    .home-bottom {
      overflow: hidden;
    }
    .projects {
      display: flex;
      justify-content: center;
      gap: 1rem;
      overflow: hidden;
    }
    .projects svg {
      width: auto;
      height: 3rem;
    }
  }
  @media (min-width: 875px) {
    .home-bottom {
      display: none;
    }
    .projects {
      display: flex;
      justify-content: center;
      gap: 1rem;
      overflow: visible;
    }
    .projects svg {
      width: auto;
      height: 3rem;
    }
  }
</style>
