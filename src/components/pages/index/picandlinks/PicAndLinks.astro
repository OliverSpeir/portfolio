---
import { Picture } from "astro:assets";
import { Icon } from "astro-icon/components";
import Socials from "@components/pages/index/picandlinks/Socials.astro";
import pfp from "@assets/imgs/pfp1.png";
---

<div class="mb-6 flex min-w-max items-center justify-center gap-4 sm:flex-col">
	<Picture
		src={pfp}
		alt=""
		quality={100}
		width={135}
		formats={["avif", "webp"]}
		densities={[1, 2]}
		class="rounded-full"
		loading="eager"
		fetchpriority="high"
		decoding="sync"
	/>
	<div class="flex flex-col">
		<Socials />
		<a class="mt-3 flex items-center justify-evenly" href="/garden/"
			><Icon name="f7:tree" class="h-8 w-8" aria-hidden="true" />Digital Garden</a
		>
		<a
			class="mt-2 flex items-center justify-evenly"
			href="https://cal.com/oliverspeir/chat"
			target="_blank"
			><Icon name="radix-icons:calendar" class="h-7 w-7" aria-hidden="true" />Schedule Call</a
		>
	</div>
</div>
