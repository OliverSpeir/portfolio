---
import Preview from "./Preview.astro";
import { getEntry } from "astro:content";
const nodeMailer = await getEntry("blog", "nodemailer");
const { remarkPluginFrontmatter: nodeMailerFrontmatter } = await nodeMailer.render();
const a11y = await getEntry("blog", "a11y");
const { remarkPluginFrontmatter: a11yFrontmatter } = await a11y.render();
---

<div class="flex max-w-[20rem] flex-col gap-3">
	<h2>Curated Flora</h2>

	<Preview
		href="/garden/nodemailer/"
		title="Serverless Nodemailer"
		description="Serverless function to send emails via SMTP on static sites, zero js needed."
		date={new Date(nodeMailerFrontmatter.date).toLocaleString("en-US", {
			month: "short",
			year: "numeric",
		})}
		readingTime={nodeMailerFrontmatter.minutesRead}
	/>
	<Preview
		href="https://github.com/OliverSpeir/remark-imgattr"
		target="_blank"
		title="remark-imgAttr"
		description="My first NPM package"
		date="Jan, 2024"
		external={true}
	/>
	<Preview
		href="/garden/a11y/"
		title="A11y thoughts"
		date={new Date(a11yFrontmatter.date).toLocaleString("en-US", {
			month: "short",
			year: "numeric",
		})}
		description="Notes and tools I've found while exploring Web Accessibility"
		readingTime={a11yFrontmatter.minutesRead}
	/>
</div>
