---
export interface Props {
  title: string;
  skills: { name: string; img: string }[];
}

const { title, skills } = Astro.props;
---

<li class="skill-card">
  <h2>
    {title}
  </h2>
  <ul class="no-bullets">
    {
      skills.map((skill) => (
        <li class="skill">
          <img src={skill.img} alt={skill.name} width="100" height="100"/>
          <div class="skill-text">{skill.name}</div>
        </li>
      ))
    }
  </ul>
</li>

<style>
  .skill-card {
    list-style: none;
    width: 100%;
    margin-left: 2rem;
    margin-right: 2rem;
    background-color: var(--card-color);
    border-radius: 0.6rem;
    font-size: x-large;
    /* min-width: 10rem;
    min-height: 10rem; */
    margin-bottom: 0.5rem;
  }
  .skill {
    display: flex;
  }
  .skill img {
    height: auto;
    max-height: 2rem;
    width: 2rem;
    padding-right: 1rem;
    margin-left: -2rem;
  }
  h2 {
    text-align: center;
    margin-top: 0;
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
  }
  .skill-text {
    padding-bottom: 1rem;
  }

  @media (min-width: 875px) {
    .skill-card {
      margin-top: -2rem;
    }
  }
</style>
