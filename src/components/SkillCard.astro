---
export interface Props {
  title: string;
  skills: { name: string; img: string }[];
}

const { title, skills } = Astro.props;
---

<li class="skill-card">
  <h2>
    {title}
  </h2>
  <ul class="no-bullets">
    {
      skills.map((skill) => (
        <li class="skill">
          <img src={skill.img} alt={skill.name} />
          <div class="skill-text">
          {skill.name}</div>
        </li>
      ))
    }
  </ul>
</li>

<style>
  .skill-card {
    list-style: none;
    width: 100%;
    padding: 0.5rem 0.8rem;
    background-color: var(--card-color);
    border-radius: 0.6rem;
    min-width: 25rem;
    min-height: 25rem;
    font-size: xx-large;
  }
  .skill {
    display:flex;
  }
  .no-bullets {
    list-style-type: none;
  }
  .skill img {
    height: auto;
    max-height: 2rem;
    width: 2rem;
    padding-right: 1rem;
    margin-left: -1rem;
  }
  h2 {
    text-align: center;
    margin-top: 0;
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
  }

  @media (max-width: 874px) {
    .skill img {
      margin-left: -2rem;
    }
    .skill-text {
      margin-top: -.25rem;
      padding-bottom: 1rem;
    }
    h2 {
      font-size: 1.5rem;
    }
    .skill-card {
      margin-bottom: 0.5rem;
      font-size: x-large;
      min-width: 10rem;
      min-height: 10rem;
    }
  }
</style>
