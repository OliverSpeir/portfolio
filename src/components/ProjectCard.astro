      </svg>
      </a>
    </div>
    <p class="description">{body}</p>
    <ul class="bulletpoints">
      {bullets.map((bulletpoint) => <li class="bulletpoint">{bulletpoint}</li>)}
    </ul>
    <ul class="icons-grid">
      {
        icons.map((icon) => (
          <li class="icon-item">
            <img class="svg" src={`/${icon}.svg`} alt={icon} width="100" height="100" />
          </li>
        ))
      }
    </ul>
  </div>
</li>
<style>
  .image-container {
    display: flex;
    justify-content: center;
  }
  video {
    width: 95%;
    border-radius: 0.6rem;
  }
  img {
    width: 95%;
    border-radius: 0.6rem;
  }
  .project-card {
    list-style: none;
    padding-bottom: 1rem;
    display: flex;
  }
  svg {
    width: 1rem;
    height: 1rem;
  }
  .link-container {
    text-align: center;
  }
  .link1 {
    padding-right: 1rem;
    text-decoration: none;
    font-size: x-large;
    color: rgb(29, 64, 240);
  }
  .link2 {
    text-decoration: none;
    font-size: x-large;
    color: rgb(29, 64, 240);
  }
  @media (prefers-color-scheme: dark){
    .link1 {
      color: rgb(118, 153, 241)
    }
    .link2 {
      color: rgb(118, 153, 241)
    }
  }
  .link1:is(:hover) {
    color: rgb(6, 0, 181);
  }
  .link1:hover svg path {
    fill: rgb(6, 0, 181);
  }
  .link2:is(:hover) {
    color: rgb(6, 0, 181);
  }
  .link2:hover svg path {
    fill: rgb(6, 0, 181);
  }
  .container {
    width: 100%;
    line-height: 1.4;
    padding: 0.5rem;
    border-radius: 0.6rem;
    color: var(--text-color);
    background-color: var(--card-color);
    font-size: x-large;
  }
  h2 {
    text-align: center;
    margin-top: 0;
    font-size: 1.25rem;
  }
  .description {
    padding-left: 1rem;
    padding-right: 1rem;
  }
  .bulletpoints {
    padding: 1rem;
    margin-left: 0.5rem;
  }
  .bulletpoint {
    margin-bottom: 1rem;
  }
  .icons-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1rem;
    padding: 0;
  }
  .icon-item {
    list-style: none;
    height: auto;
  }

  
</style>
