---
export interface Props {
  title: string;
  href: string;
  target: string;
  customclass: string;
}

const { href, title, target, customclass } = Astro.props;
---

<li class=`link-card ${customclass}`>
  <a href={href} target={target}>
    <h2>
      {title}
    </h2>
  </a>
</li>
<style>
  .link-card {
    list-style: none;
    display: flex;
    padding: 0.25rem;
    background-color: var(--accent-color);
    background-image: none;
    background-size: 400%;
    border-radius: 0.6rem;
    background-position: 100%;
    transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    box-shadow: 0 4px 6px -1px rgba(253, 253, 253, 0.1),
      0 2px 4px -2px rgba(146, 146, 146, 0.1);
  }

  .link-card > a {
    width: 100%;
    text-decoration: none;
    line-height: 1.4;
    padding: 0.5rem 0.8rem;
    border-radius: 0.35rem;
    color: var(--text-color);
    background-color: var(--card-color);
    opacity: 0.8;
  }
  h2 {
    text-align: center;
    margin: 0;
    font-size: 1.25rem;
    transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
  }
  .link-card:is(:hover) {
    background-position: 0;
    background-image: var(--hover-accent-gradient);
  }
  .link-card:is(:hover) h2 {
    color: var(--hover-accent);
  }
  @media (min-width: 875px) {
    h2 {
      padding-top: .25rem;
      padding-bottom: .25rem;
    }
  }
  @media (max-width: 874px) {
    h2 {
      /* padding-top: 1rem; */
    }
  }
  .top {
    position: relative;
    right:69.5px;
  }
</style>
