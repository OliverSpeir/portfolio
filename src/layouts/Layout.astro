---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--hover-accent: rgb(13, 28, 240);
		--hover-accent-gradient: linear-gradient(45deg, var(--hover-accent), #5b3fda99 30%, white 60%);
	}
	@media (prefers-color-scheme: dark) {
  		:root {
			--text-color: #d6d6d6;
			--accent-color:rgb(98, 94, 94);
    		--bg-color: #222;
			--card-color: rgb(77, 75, 75);
			--card-shadow:rgba(255, 255, 255, 0.39);
  		}
	}
	@media (prefers-color-scheme: light) {
  		:root {
    		--text-color: black;
			--accent-color: #444;
    		--bg-color: #F6F6F6;
			--card-color: white;
			--card-shadow:rgba(0, 0, 0, 0.415);
  		}
	}
	html {
		font-family: system-ui, sans-serif;
		background-color: var(--bg-color);
		color: var(--text-color)
	}
</style>
