---
const { frontmatter } = Astro.props;
import NavLinks from "../components/NavLinks.astro";
---

<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={frontmatter.description} />
    <link rel="icon" type="image/svg" href="/favicon.svg" />
    <link rel="apple-touch-icon" href="/profile_picture.png" />
    <meta property="og:image" content={frontmatter.cardPicture} />
    <meta name="twitter:card" content={frontmatter.cardPicture} />
    <title>{frontmatter.title}</title>
    <script>
      type CodeBlockElement = HTMLPreElement & { parentNode: HTMLElement };
      const copyButtonLabel = "Copy Code";

      const createCopyButton = () => {
        const copyButton = document.createElement("button");
        copyButton.className = "copy-code";
        copyButton.innerText = copyButtonLabel;
        return copyButton;
      };

      const codeBlocks = Array.from(
        document.querySelectorAll("pre")
      ) as CodeBlockElement[];

      for (const codeBlock of codeBlocks) {
        const wrapper = document.createElement("div");
        wrapper.style.position = "relative";

        const copyButton = createCopyButton();
        copyButton.addEventListener("click", async () => {
          const code = codeBlock.querySelector("code");
          if (code) {
            const text = code.textContent;
            if (text) {
              await navigator.clipboard.writeText(text);

              copyButton.innerText = "Code Copied";

              setTimeout(() => {
                copyButton.innerText = copyButtonLabel;
              }, 700);
            }
          }
        });

        codeBlock.appendChild(copyButton);
        codeBlock.parentNode.insertBefore(wrapper, codeBlock);
        wrapper.appendChild(codeBlock);
      }
    </script>
    <script
      type="text/partytown"
      async
      src="https://www.googletagmanager.com/gtag/js?id=G-YXRK3RSZN8"
    ></script>
    <script type="text/partytown">
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());
      gtag("config", "G-YXRK3RSZN8");
    </script>
  </head>
  <header>
    <NavLinks />
  </header>
  <body>
    <slot />
  </body>

  <style is:global>
    @media (prefers-color-scheme: dark) {
      :root {
        --text-color: #d6d6d6;
        --accent-color: rgb(98, 94, 94);
        --bg-color: #222;
        --card-color: rgb(77, 75, 75);
        --card-shadow: rgba(255, 255, 255, 0.39);
      }
    }
    @media (prefers-color-scheme: light) {
      :root {
        --text-color: black;
        --accent-color: #292c88;
        --bg-color: #f6f6f6;
        --card-color: rgb(165, 215, 246);
        --card-shadow: rgba(45, 59, 170, 0.415);
      }
    }
    img {
      width: 100%;
      height: auto;
    }
    html {
      font-family: system-ui, sans-serif;
      background-color: var(--bg-color);
      color: var(--text-color);
      display: flex;
      flex-direction: column;
      align-items: center;
    }
    .copy-code {
      position: absolute;
      top: 20px;
      right: 10px;
      background-color: var(--text-color);
      padding: 0.25rem;
      font-size: 0.75rem;
      line-height: 1rem;
      border-radius: 2rem;
    }

    .copy-code:hover {
      background-color: var(--accent-color);
    }
    a {
      color: rgb(37, 96, 244);
      text-decoration: none;
    }
    @media (min-width: 875px) {
      body {
        max-width: 50rem;
      }
    }
    @media (max-width: 874px) {
      .copy-code {
        opacity: 0.2;
      }
      body {
        /* padding-left: 5rem; */
        /* margin-right: 5rem; */
      }
    }
  </style>
</html>
